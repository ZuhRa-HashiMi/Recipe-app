<%= javascript_include_tag "recipe" %>
<div class="d-flex flex-column justify-content-center p-4">
<h1 class="h1 heading  align-self-center"><%=@recipe.name%></h1>
<div  class="d-flex justify-content-between" >
<p>Preparation time: <%=@recipe.preparationTime%> hours</p>

<%= form_with model: @recipes, url: toggle_public_path , id: 'toggle', method: :post do |form| %>
<div class="form-check form-switch">
 <%= form.label :public, class: "form-check-label mr-3" do %>
    <%= form.check_box :public, {checked: @recipe.public, class: "form-check-input"},true,false %>
  Public
  <%end%>
  </div>
<% end %>
</div>

<p>Cooking time: <%=@recipe.cookingTime%> hours</p>
<p>Steps: <br><%=@recipe.description%></p>
<div class="d-flex justify-content-between" >
<%=link_to "Generate shopping list", recipes_detail_path(@recipe.id)%>
<%=link_to "Add Ingredients", new_ingredients_path(@recipe.id)%>
</div>
<hr>
<% if can? :update, @recipe %>
   <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Value</th>
      <th scope="col">Acttion</th>
    </tr>
  </thead>
  <tbody>
  <%@recipes_food.each do |ingredient|%>
    <tr>
      <th><%=ingredient.food.name%></th>
      <td><%=ingredient.quantity%></td>
       <%if ingredient.quantity.nil?%>
      <td>N\A</td>
      <%else%>
      <td><%=ingredient.food.price * ingredient.quantity%></td>
      <%end%>
      <td>
       <%=link_to "Edit",edit_ingredients_path(id:@recipe.id, ingredient_id: ingredient.id), class: "btn btn-primary" %>
       <%=link_to "Delete",recipes_food_destroy_path(id:@recipe.id, ingredient_id: ingredient.id),method: :delete ,class: "btn btn-danger" %>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>
<% end %>
</div>